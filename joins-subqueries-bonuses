SELECT * FROM employees WHERE emp_no = '101010';
-- Find all the employees with the same hire date as employee 101010.
SELECT CONCAT(emp.first_name, ' ', emp.last_name), emp.hire_date
FROM employees emp
WHERE hire_date IN (
    SELECT hire_date
    FROM employees
    WHERE emp_no = '101010'
    );
